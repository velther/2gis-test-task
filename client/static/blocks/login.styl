.login
  position: relative
  top: 50%
  left: 50%

  width: 350px
  padding: 20px

  background: rgba(#fff, .2)
  border: 2px solid rgba(#fff, .3)
  box-shadow: 0 0 10px rgba(#000, .5)

  color: #fff
  // text-shadow: 0 0 5px rgba(#000, .9)
  font-family: Arial, sans-serif
  font-size: 1.2em

  transform: translate(-50%, -50%)

  &-text
    text-align: center

  &-control
    display: block

    margin: 10px auto
    padding: 5px

    border: 1px solid rgba(#fff, .5)
    // box-shadow: 3px 3px 10px rgba(#000, .2)

    color: #fff
    font-size: .8em
    font-family: Arial, sans-serif


  &-input
    border: 1px solid rgba(#fff, .5)
    background: rgba(#fff, .3)

  &-button
    padding: 5px 10px

    background: linear-gradient(rgba(#fff, .2), rgba(#fff, .4))

    // text-shadow: 0 0 2px rgba(#000, .8)

    // &:active
    //   box-shadow: 0 0 10px rgba(#000, .2)

  &-error
    .login-text
      text-shadow: 0 0 5px rgba(#c00, .7)

    .login-input
      box-shadow: 0 0 5px 1px rgba(#c00, .5)
